<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.SalaryUpdateViewController">
   <children>
      <Label text="Update Salaries by Range" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="150.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Minimum Salary ($):">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="minSalaryField" promptText="e.g. 50000" GridPane.columnIndex="1" />
            <Label text="Maximum Salary ($):" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="maxSalaryField" promptText="e.g. 100000" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Percentage Increase (%):" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="percentageField" promptText="e.g. 3.5" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateSalaries" prefWidth="120.0" text="Update Salaries" />
            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearFields" prefWidth="120.0" text="Clear" />
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </HBox>
      <Separator prefWidth="200.0" />
      <Label text="Affected Employees:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TableView fx:id="affectedEmployeesTable" prefHeight="200.0" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
            <TableColumn fx:id="jobTitleColumn" prefWidth="150.0" text="Job Title" />
            <TableColumn fx:id="divisionColumn" prefWidth="150.0" text="Division" />
            <TableColumn fx:id="currentSalaryColumn" prefWidth="120.0" text="Current Salary" />
            <TableColumn fx:id="newSalaryColumn" prefWidth="120.0" text="New Salary" />
         </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</VBox>
