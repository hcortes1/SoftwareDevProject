<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.ReportsViewController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Report Type:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <ComboBox fx:id="reportTypeComboBox" prefWidth="200.0" promptText="Select Report Type" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Period:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label text="Year:" />
            <ComboBox fx:id="yearComboBox" prefWidth="100.0" promptText="Year" />
            <Label text="Month:" />
            <ComboBox fx:id="monthComboBox" prefWidth="100.0" promptText="Month" />
            <Button fx:id="generateButton" mnemonicParsing="false" onAction="#generateReport" text="Generate Report" />
         </children>
      </HBox>
      <TableView fx:id="reportTable" prefHeight="300.0" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="categoryColumn" prefWidth="200.0" text="Category" />
            <TableColumn fx:id="totalPayColumn" prefWidth="150.0" text="Total Pay" />
         </columns>
      </TableView>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="exportButton" mnemonicParsing="false" onAction="#exportReport" text="Export Report" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
